{
  "name": "MetalPetal",
  "version": "1.0",
  "authors": {
    "YuAo": "me@imyuao.com"
  },
  "homepage": "https://github.com/MetalPetal/MetalPetal",
  "summary": "GPU-accelerated image and video processing framework based on Metal.",
  "license": {
    "type": "MIT"
  },
  "source": {
    "git": "https://github.com/MetalPetal/MetalPetal.git",
    "tag": "1.0"
  },
  "requires_arc": true,
  "platforms": {
    "ios": "9.0",
    "osx": "10.13"
  },
  "module_map": "MetalPetal.modulemap",
  "prefix_header_file": false,
  "swift_versions": "5.0",
  "default_subspecs": "Core",
  "subspecs": [
    {
      "name": "Core",
      "source_files": "**/*.{h,m,c,mm,metal}",
      "private_header_files": [
        "MTIPrint.h",
        "MTIDefer.h",
        "MTIHasher.h"
      ],
      "weak_frameworks": [
        "MetalPerformanceShaders",
        "MetalKit"
      ]
    },
    {
      "name": "Swift",
      "dependencies": {
        "MetalPetal/Core": [

        ]
      },
      "source_files": "**/*.{swift}",
      "weak_frameworks": [
        "MetalPerformanceShaders",
        "MetalKit"
      ]
    }
  ],
  "swift_version": "5.0"
}
